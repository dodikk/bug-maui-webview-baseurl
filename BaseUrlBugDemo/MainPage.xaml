<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BaseUrlBugDemo.MainPage">

    
    <VerticalStackLayout
        Spacing="25"
        Padding="30,0"
        HorizontalOptions="Fill"
        VerticalOptions="Fill"
        Margin="0">

        <Label
            Text="Hello, World!"
            SemanticProperties.HeadingLevel="Level1"
            FontSize="32"
            HorizontalOptions="Center" />

        <WebView
            x:Name="PlainWebview"
            HeightRequest="350"
            HorizontalOptions="Fill"
            BackgroundColor="Pink"
            Margin="0">

            <WebView.Source>
                <HtmlWebViewSource x:Name="PlainWebviewHtmlSource" />
            </WebView.Source>
        </WebView>

    </VerticalStackLayout>
    

</ContentPage>

